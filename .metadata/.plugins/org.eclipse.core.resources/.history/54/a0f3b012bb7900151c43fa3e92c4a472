//  Alive abstract class
//********************************************************************

abstract class Alive implements Comparable<Alive> {
	
	protected String name;
	protected Element element;
	protected byte complexity;
	
	Alive(byte complexity) throws ComplexityException{
		if (complexity < 1 || complexity > 10) {
			throw new ComplexityException("Invalid complexity (" + complexity + ")" );
		}
		this.complexity = complexity;
	}
	
	
	public String ComplexityToString(){
		switch (complexity){
		case 1-2: return "very simple";
		case 3-5: return "simple";
		case 6-8: return "complex";
		case 9-10: return "very complex";
		default: return "unknown";
		}
	}
	
	abstract void move();
	
	public int compareTo(Alive o) {
		final int LOWER = -1;
	    final int EQUAL = 0;
	    final int HIGHER = 1;

	    if (this.complexity > o.complexity)
	    	return HIGHER;
	    
	    if (this.complexity < o.complexity)
	    	return LOWER;
	    
	    return EQUAL;
	}
	
	@Override 
	public boolean equals(Object aThat) {
	     if (this == aThat) return true;
	     if (!(aThat instanceof Alive)) return false;

	     return this.name == ((Alive)aThat).name;
	}
	
	public String toString(){
		return "MORE AND MORE";
	}
	
}